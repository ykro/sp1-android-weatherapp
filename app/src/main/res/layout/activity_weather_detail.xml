<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.WeatherDetailActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutWeatherTop"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/weather_bottom_padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main.message.condition"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/txtDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/imgIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main.message.temp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/txtTemp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutWeatherTop"
        android:gravity="center_horizontal"
        android:id="@+id/layoutWeatherBottom"
        android:layout_marginBottom="@dimen/weather_bottom_padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main.message.min"
            android:layout_marginRight="@dimen/weather_margin"
            android:id="@+id/txtTempMin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main.message.max"
            android:layout_marginRight="@dimen/weather_margin"
            android:id="@+id/txtTempMax" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/main.message.sunrise"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtSunrise" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/main.message.sunset"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="@dimen/weather_bottom_padding_small"
        android:id="@+id/txtSunset" />
</LinearLayout>
